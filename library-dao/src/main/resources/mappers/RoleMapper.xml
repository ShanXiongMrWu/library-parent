<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nf.library.dao.RoleDao">


    <resultMap id="roleResultMap" type="com.nf.library.entity.Role">
        <id column="id" property="id"/>
    </resultMap>
    <!--根据用户与角色的中间表查询对应的角色-->
    <select id="getRoleByloginName" resultMap="roleResultMap">
        select r.id,r.description,r.roletag,r.rolename from user_role ur
        inner join role r on ur.role_id = r.id
        inner join user u on ur.user_id = u.id
        where loginname = #{loginName}
    </select>
</mapper>